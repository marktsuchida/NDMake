# All field values are concatenated into a single line (aside from the leading
# whitespace on the first line, only newlines are removed).
# To set a field value with multiple lines (rarely necessary), use {{"\n"}}.
#
# Or so I thought, but Python's configparser, despite being poorly documented,
# turns out to preserve newlines in multi-line values while stripping leading
# and trailing whitespace on each line. Thus, one must use backslashes for
# line continuation and {{" "}} to include a space at the beginning or end of a
# line.

# Non-template fields: given, scope, parallel, input, producer, barrier (all
# others are template-valued).
#
# (Note: worry about barrier later; we do not needed for the initial
# implementation.)

# Special var (implicit import): g (= the global:defs template).
# Add {% import '...' as g %} to beginning of all templates (except the global
# defs itself).

# Special filters: dirname(filename), basename(filename), stripext(filename),
# fileext(filename), shquote() # add to environment's filters


# The name ("data_params" here) is optional and not used but allows multiple
# global sections to appear without their defs fields clashing.
[global data_params]
defs:
    {% set iterations = [50, 50, 200, 20] %}
    {% set moving_range = {"S1378_1": (22, 251)} %}

    {% set bounds = {"S1378_1": (807, 807 + 216, 239, 239 + 512)} %}
    {% set velocity = {"S1378_1": -1.0} %}
    {% set seconds_per_frame = {"S1378_1": 0.23985} %}
    {% set microns_per_pixel = 0.0868 %}

    {% set demons_interval = 4 %}

    {% macro px_per_frame(experiment) -%}
    {{velocity[experiment] / microns_per_pixel * seconds_per_frame[experiment]}}
    {%- endmacro %}

[global logistics]
defs:
    {% set python = ". env/bin/activate; python" %}

[dimension EXPERIMENT]
# Parsed with shlex.split.
values: S1378_1

[dimension RESOLUTION]
range: {{g.iterations|length}}

[dimension ITERATION]
given: RESOLUTION
range: 1 {{g.iterations[RESOLUTION|int] + 1}}

[dataset input_metadata]
scope: EXPERIMENT
filename: input/symlinks/{{EXPERIMENT}}/metadata.txt

[dimension FRAME]
given: EXPERIMENT
input: input_metadata
range_command: {{g.python}} json_get.py {{input_metadata}} Summary.Frames
# Instead of range_command, command or match + transform can be used.
# Output of range_command or command is shlex'ed.
#
# match: template expanding into regular expression, with named
# subpattern: (?P<value>...) [allow unnamed if only one group appears in re]
# transform: template converting extracted value ("value") to domain value
#
# Note that "match" pattern is processed by 1) rendering the template, 2)
# splitting at slashes, 3) interpreting each item as a regular expression.

[dataset input_tifs]
scope: FRAME
filename: input/symlinks/{{EXPERIMENT}}/img_{{"%09d"|format(FRAME|int)}}_Sequence_000.tif

[subdomain FRAME.moving]
range: {{g.moving_range[EXPERIMENT]|join(" ")}}

[compute transform_refframe]
scope: FRAME.moving
parallel: yes
input: input_tifs
command: {% set bounds = g.bounds[EXPERIMENT] -%}
 {% set rel_frame = FRAME|int - g.moving_range[EXPERIMENT][0] -%}
 {{g.python}} linear_translation.py --type=uint16 \
     --output={{glass_FoR_image}} \
     --v-start={{bounds[0]}} --v-stop={{bounds[1]}} \
     --h-start={{bounds[2]}} --h-stop={{bounds[3]}} \
     --v-speed={{"%e"|format(g.px_per_frame(EXPERIMENT)|float)}} \
     --time={{"%d"|format(rel_frame)}} \
     {{input_tifs}}

[dataset glass_FoR_image]
scope: FRAME.moving
producer: transform_refframe
filename: compute/glass-FoR-image/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.tif

[subdomain FRAME.moving.selection]
slice: 0 -{{g.demons_interval}}

[compute perframe_deform]
scope: FRAME.moving.selection
parallel: 1/3
input: glass_FoR_image
command: DYLD_LIBRARY_PATH=/usr/local/lib ./demons \
     -histogram_match \
     -displacement_field_prefix={{(demons_iter_field|shsplit)[0]|dirname}}/ \
     -displacement_field_suffix=.mha \
     -iterations={{g.iterations|join(",")}} \
     -maximum_step_length=0.6 \
     -displacement_field_sigma=1.8 \
     -update_field_sigma=0.0 \
     {{glass_FoR_image}} \
     {{glass_FoR_image(FRAME=FRAME|int + g.demons_interval)}}
# Each dataset name is an object with __str__() and __call__(*, **kwargs).
# This can be used in various ways (e.g. glass_FoR_image(FRAME=0)).
# kwargs defaults to the current iteration element, and the value of
# __call__() is a list if the element ends up being partially specified.

[dataset demons_iter_field]
scope: FRAME.moving.selection ITERATION
producer: perframe_deform
filename: compute/demons_iter_field/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}/{{"%02d"|format(RESOLUTION|int)}}_{{"%04d"|format(ITERATION|int)}}.mha

[compute get_final_field]
scope: FRAME.moving.selection
parallel: yes
input: demons_iter_field
command: cp {{(demons_iter_field|shsplit)[-1]}} {{displ_field}}

[dataset displ_field]
scope: FRAME.moving.selection
producer: get_final_field
filename: compute/displ_field/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.mha

[compute deform_moving_image]
scope: FRAME.moving.selection
input: displ_field glass_FoR_image
parallel: yes
command: {{g.python}} apply_field.py \
    {{displ_field}} \
    {{glass_FoR_image(FRAME=FRAME|int + g.demons_interval)}} \
    {{registered_image}}

[dataset registered_image]
scope: FRAME.moving.selection
producer: deform_moving_image
filename: compute/registered_image/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.tif

[compute create_image_masks]
scope: FRAME.moving
input: glass_FoR_image
command: echo mask needs update: {{manual_masks}}; exit 1

[dataset manual_masks]
scope: FRAME.moving
producer: create_image_masks
filename: manual/masks/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.tif

[compute mask_fields]
scope: FRAME.moving.selection
input: manual_masks displ_field
# Currently disabled.
command: cp {{displ_field}} {{masked_displ_field}}

[dataset masked_displ_field]
scope: FRAME.moving.selection
producer: mask_fields
filename: compute/masked_displ_field/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.mha

[compute plot_displacement]
scope: FRAME.moving.selection
input: glass_FoR_image masked_displ_field
parallel: yes
command: {{g.python}} plot_field.py --image={{glass_FoR_image}} \
     --title='Per-frame, {{EXPERIMENT}}: {{"% 4d"|format(FRAME|int)}}' \
     --vectors \
     {{masked_displ_field}} {{displacement_plot}}

[dataset displacement_plot]
scope: FRAME.moving.selection
producer: plot_displacement
filename: plot/field/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.eps

[compute accumulate_disp]
scope: EXPERIMENT
input: masked_displ_field
command: {{g.python}} accumulate_field.py \
     {{masked_displ_field}} \
     {{(cumul_displ_field|shsplit)[0]|dirname}}

[dataset cumul_displ_field]
scope: FRAME.moving.selection
producer: accumulate_disp
filename: compute/cumul_displ_field/{{EXPERIMENT}}/{{"%04d"|format(FRAME|int)}}.mha

